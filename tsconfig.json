{
    "compilerOptions": {
        "target": "ES6",
        "module": "Node16",
        "lib": [
            "es6",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true, // Skip type checking of declaration files
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node16", // or "nodenext"
        "types": [
            "node"
        ],
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}